<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:padding="10dp"
        android:text="@string/about_sf_indiefest_"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/lblComingSoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtSynopsis"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="@string/coming_soon"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <ImageView
        android:id="@+id/imgComingSoon"
        android:contentDescription="@string/coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblComingSoon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/coming_soon" />

</RelativeLayout>